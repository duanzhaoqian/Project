     <script type="text/javascript">
         function f_alert(type) {
             $.freeDialog.alert('提示内容', '提示', type);
         }
         function f_alert2(type) {
             switch (type) {
                 case "success":
                     $.freeDialog.success('提示内容');
                     break;
                 case "warn":
                     $.freeDialog.warn('提示内容');
                     break;
                 case "question":
                     $.freeDialog.question('提示内容');
                     break;
                 case "error":
                     $.freeDialog.error('提示内容');
                     break;
                 case "confirm":
                     $.freeDialog.confirm('提示内容', function (yes) {
                         alert(yes);
                     });
                     break;
                 case "warning":
                     $.freeDialog.warning('提示内容', function (type) {
                         alert(type);
                     });
                     break;
                 case "prompt":
                     $.freeDialog.prompt('提示内容', function (yes, value) {
                         if (yes) alert(value);
                     });
                     break;
                 case "prompt2":
                     $.freeDialog.prompt('提示内容', '初始化值', function (yes, value) {
                         if (yes) alert(value);
                     });
                     break;
                 case "prompt3":
                     $.freeDialog.prompt('提示内容', true, function (yes, value) {
                         if (yes) alert(value);
                     });
                     break;
                 case "prompt4":
                     $.freeDialog.prompt('提示内容', '初始化多选框值', true, function (yes, value) {
                         if (yes) alert(value);
                     });
                     break;
                 case "waitting":
                     $.freeDialog.waitting('正在保存中,请稍候...');
                     setTimeout(function () {
                         $.freeDialog.closeWaitting();
                     }, 2000);
                     break;
                 case "waitting2":
                     var manager = $.freeDialog.waitting('正在保存中2,请稍候...');
                     setTimeout(function () {
                         manager.close();
                     }, 1000);
                     break;
             }

         }
         //url方式打开 默认iframe加载
         function f_open2() {
             $.freeDialog.open({ url: 'http://rz.kuaiyoujia.com/', height: 300, width: null, buttons: [
                { text: '确定', onclick: function (item, dialog) { alert(item.text); } },
                { text: '取消', onclick: function (item, dialog) { dialog.close(); } }
             ], isResize: false});
         }
         //messages消息 
         function f_tip() {
             $.freeDialog.tip({ title: '提示信息', content: '您有' + (num++) + "新消息!" });
         }
         var tip;
         var num = 0;
         function f_tip2() {
             if (!tip) {
                 tip = $.freeDialog.tip({ title: '提示信息', content: '订单已取消！' });
             }
             else {
                 var visabled = tip.get('visible');
                 if (!visabled) tip.show();
                 tip.set('content', '内容改变' + num++);
             }
         }

         

     </script>
