<%@ Page Title="" Language="C#" MasterPageFile="~/Views/Shared/Main.Master" Inherits="System.Web.Mvc.ViewPage<dynamic>" %>

<asp:Content ID="Content1" ContentPlaceHolderID="TitleContent" runat="server">
	如何修改手机号
</asp:Content>

<asp:Content ID="Content2" ContentPlaceHolderID="MainContent" runat="server">
<div class="bgcolor">
	<div class="w1190"><i class="help_t"></i><i class="helptr"><a class="linkD" href="#"></a></i></div>
</div>
<div class="clearfix">
<!-- InstanceBeginEditable name="EditRegion3" -->
  <div class="p_wrap">
    <div class="helpbox clearFix">
      <div class="silder">
<%=Html.Partial("Menu")%>
      </div>
      <div class="main">
        <h6>如何修改手机号</h6>
        <p><strong>第一步：</strong>登录用户后台&gt;个人信息&gt;修改资料，点击“修改手机号码”链接。</p>
        <div class="screenshot mb15"><img width="740px" src="<%=TXCommons.GetConfig.ImgUrl%>images/help/abc1.jpg"></div>
        <p><strong>第二步：</strong>系统会提示您输入新的手机号，输入完点击“下一步”按钮。</p>
        <div class="screenshot mb15"><img src="<%=TXCommons.GetConfig.ImgUrl%>images/help/abc2.jpg"></div>
        <p><strong>第三步：</strong>系统将会往您的新手机号发送一串验证码，输入验证码并点击“确定”按钮。</p>
        <div class="screenshot mb15"><img src="<%=TXCommons.GetConfig.ImgUrl%>images/help/abc3.jpg"></div>
        <p><strong>第四步：</strong>手机号码修改成功！</p>
        <div class="screenshot mb15"><img src="<%=TXCommons.GetConfig.ImgUrl%>images/help/abc4.jpg"></div>

      </div>
    </div>
    <div class="shadowHR">阴影</div>
  </div>
  <!-- InstanceEndEditable -->
</div>

</asp:Content>
