<div class="sortbox">
    <ul id="ul_0" style="overflow:auto;">
        @foreach (var item in Model)
        {
            <li><a href="javascript:;" to="@Url.MerchantSiteUrl().Category_GetSonCategory(@item.Id)" level="@item.Level" value="@item.Id">@item.Name</a></li>
