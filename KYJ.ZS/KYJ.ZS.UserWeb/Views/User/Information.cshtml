                                <label>
                                    <select id="LiveDistrictId" name="LiveDistrictId" class="w100">
                                        <option value="0">请选择</option>
                                    </select>
                                    <input type="hidden" id="LiveDistrictName" name="LiveDistrictName" value="@Model.LiveDistrictName" /></label>
                            </td>
