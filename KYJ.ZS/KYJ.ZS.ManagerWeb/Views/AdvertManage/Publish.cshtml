            $("#form1").validate({
                rules: {
                    sel_Page:{
                        min:1
                    },
                    sel_Position:{
                        min:1
                    },
                    txtAdvertName:{
                        required:true,
                        maxlength:30
                    },
                    txtAdvertUrl: {
                        required:true,
                        url: false
                    },
                    sel_Order:{
                        min:1
                    }
                },
                messages: {
                    sel_Page:{
                        min:"<span class='ml10 cold21b1b'>未选择页面</span>"
                    },
                    sel_Position:{
