@RenderSection("scripts", false)
<script type="text/javascript">
    $("#btn_loginout").click(function () {
        $.confirm("您确认要退出么？", "询问", function () {
            location.href = "@Url.ManagerSiteUrl().Common_LoginOut";
        });
    });
    $(function () {
        // 删除没有权限的模块
        $("#div_menu h2").each(function () {
            if ($.trim($(this).next("ul").html()) == '') {
                $(this).closest("div").remove();
            }
        })
        $("#div_menu div:last").attr("class", "ullast");

        // 默认展开父模块节点
        $("#div_menu li").each(function () {
            if ($(this).attr("class") == "hover") {
                $(this).closest("div").find("h2").attr("class", "on");
                $(this).closest("ul").css("display", "block");
                return false;
            }
        })
    });
</script>
</body>
</html>
