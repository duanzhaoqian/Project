@{
    Layout = null;
}

<!DOCTYPE html>
<html dir="ltr" lang="en-US">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>Login AfterSales System</title>
    <link href="~/Resource/Styles/BottonStyle.css" rel="stylesheet" />
    <link href="~/Resource/Styles/loginStyle.css" rel="stylesheet" />
    <script src="~/Resource/Scripts/jquery-1.8.2.min.js"></script>
    <script src="~/Resource/Scripts/JiePan.js"></script>
    <script src="~/Resource/Scripts/jquery-easyui-1.3.4/jquery.easyui.min.js"></script>
    <link href="~/Resource/Scripts/jquery-easyui-1.3.4/themes/icon.css" rel="stylesheet" />
    <link href="~/Resource/Scripts/jquery-easyui-1.3.4/themes/default/easyui.css" rel="stylesheet" />
    <style>
        #submit {
            margin-left: 40px;
            margin-top: 30px;
        }
    </style>
    <script type="text/javascript">
        $(function() {
            $("#submit").click(function() {
                JP.BackMessage("@Url.Action("login")", $("#ff").serialize(), function() {
                });
            });
        });
    </script>
</head>

<body>
    <div id="container">
        <form id="ff">
            <div class="login">Login SafiloCN After Sales System </div>
            <div class="username-text">User Name:</div>
            <div class="password-text">PassWord:</div>
            <div class="username-field">
                <input type="text" name="uname" value="admin" />
            </div>
            <div class="password-field">
                <input type="password" name="upwd" value="admin" />
            </div>
            <input type="button" id="submit" class="button blue" value="Login" />
        </form>
    </div>
    <div id="footer">
        Copyright &copy; 2014 by Safilo China  |    Publish by Eric.Lu@safilo.com
    </div>
</body>
</html>

